  "scripts": {
    "lint": "prettier -c \"./**/*.{ts,js,cjs,svelte,json}\"",
    "lint:fix": "prettier -w \"./**/*.{ts,js,cjs,svelte,json}\"",
    "dev:cli": "cd packages/pockethost && bun run dev",
    "dev:dashboard": "cd packages/dashboard && bun run dev",
