{
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "$common": ["../common/index.ts"],
      "$util/*": ["src/lib/util/*"]
    }
  },
  "include": ["src/**/*.ts", "src/lib/random-words.js"]
}
